#!/bin/bash

source $OPENSHIFT_CARTRIDGE_SDK_BASH
NEO4J_BIN_DIR=${OPENSHIFT_NEO4J_DIR}/bin

STOPTIMEOUT=10
FMT="%a %b %d %Y %H:%M:%S GMT%z (%Z)"
PID=pid/neo4j.pid

NEO4J_CLI="-host $OPENSHIFT_NEO4J_DB_HOST -port $OPENSHIFT_NEO4J_DB_PORT"

function is_running() {
    if [ -f $PID ]; then
        return 0
    fi
    return 1
}

function status() {
    if [ is_running ]; then
        client_result "Neo4j is running"
    else
        client_result "Neo4J is not running"
    fi
}

function start() {
    if (is_running); then
        exit 0
    fi

    neo4j start -host $OPENSHIFT_NEO4J_DB_HOST -port $OPENSHIFT_NEO4J_DB_PORT

    ret=$?
    if [ $ret -ne 0 ]; then
        echo "Neo4j failed to start - $ret" 1>&2
        exit $ret
    fi
}

function stop() {
    if (is_running); then
        neo4j-cli $NEO4J_CLI SHUTDOWN
        if [ $? -eq 0 ]; then
            exit 0
        fi
        exit 1
    fi
}

function restart() {
    if (stop); then
        start
    else
        start
    fi
}

function build() {
    echo
}

function post-deploy() {
    echo
}

function pre-build() {
    echo
}

function tidy() {
    echo
}

#
#  main():
#

# Ensure arguments.
if ! [ $# -eq 1 ]; then
    echo "Usage: $0 [start|restart|graceful|graceful-stop|stop|status]"
    exit 1
fi

# Source utility functions.
source $OPENSHIFT_CARTRIDGE_SDK_BASH

# Handle commands.
case "$1" in
    start)               start       ;;
    restart|graceful)    restart     ;;
    graceful-stop|stop)  stop        ;;
    status)              status      ;;
    build)               build       ;;
    pre-build)           pre-build   ;;
    post-deploy)         post-deploy ;;
    tidy)                tidy        ;;
    *) exit 0;
esac
